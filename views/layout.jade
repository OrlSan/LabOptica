doctype html
html(lang="es")
    head
        link(rel="stylesheet", href="/css/main.css")
        link(rel="stylesheet", href="/bootstrap/dist/css/bootstrap.min.css")
        link(rel="stylesheet" href="/font-awesome/css/font-awesome.min.css")
        script(src="/jquery/dist/jquery.min.js")
        block head

    body
        //- Barra de navegación
        nav.navbar.navbar-default.navbar-fixed-top(role='navigation')
            .navbar-header
                button.navbar-toggle(type='button', data-target='#navbarCollapse', data-toggle='collapse')
                    span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand(href='#') Mi cuenta - IT

            #navbarCollapse.collapse.navbar-collapse
                ul.nav.navbar-nav
                    li
                        a(href='/dashboard')
                            span(class="fa fa-home")
                            |  Inicio
                    li
                        a(href='/datos')
                            span(class="fa fa-check")
                            |  Facturar
                    li.dropdown
                        a.dropdown-toggle(data-toggle="dropdown" href='#') Configuraciones
                            span.caret
                        ul.dropdown-menu(role="menu")
                            li
                                a(href="/newPass") Cambiar contraseña
                            li
                                a(href="/newUser") Alta de usuario
                ul.nav.navbar-nav.navbar-right(style="padding-right: 30px;")
                    li
                        a(href="/logout")
                            span(class="fa fa-sign-out")
                            |  Salir

        //- Aquí va el contenido
        block content


        script.
            /*menu handler*/
            $(function(){
              function stripTrailingSlash(str) {
                if(str.substr(-1) == '/') {
                  return str.substr(0, str.length - 1);
                }
                return str;
              }

              var url = window.location.pathname;
              var activePage = stripTrailingSlash(url);

              $('.nav li a').each(function(){
                var currentPage = stripTrailingSlash($(this).attr('href'));

                if (activePage == currentPage) {
                  $(this).parent().addClass('active');
                }
              });
            });
